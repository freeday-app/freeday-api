{
	"name": "freeday-api",
	"version": "1.0.0",
	"author": "Coddity",
	"description": "Freeday API",
	"dependencies": {
		"@google-cloud/dialogflow": "^4.5.0",
		"@slack/bolt": "^3.8.1",
		"@slack/web-api": "^6.5.0",
		"bcrypt": "^5.0.1",
		"cors": "^2.8.5",
		"cron-parser": "^4.1.0",
		"cross-env": "^7.0.3",
		"dayjs": "^1.10.7",
		"dotenv": "^10.0.0",
		"express": "^4.17.1",
		"google-auth-library": "^7.10.2",
		"helmet": "^4.6.0",
		"mongoose": "^6.0.13",
		"rand-token": "^1.0.1",
		"winston": "^3.3.3"
	},
	"devDependencies": {
		"@babel/core": "^7.16.0",
		"@babel/eslint-parser": "^7.16.3",
		"chai": "^4.3.4",
		"chai-http": "^4.3.0",
		"eslint": "^8.2.0",
		"eslint-config-airbnb-base": "^15.0.0",
		"eslint-plugin-chai-friendly": "^0.7.2",
		"eslint-plugin-flowtype": "^8.0.3",
		"eslint-plugin-import": "^2.25.3",
		"markdownlint": "^0.24.0",
		"markdownlint-cli": "^0.29.0",
		"mocha": "^9.1.3",
		"nodemon": "^2.0.15"
	},
	"scripts": {
		"prod": "node src/app.js",
		"dev": "cross-env PORT=8787 DEBUG=@slack/events-api:*,@slack/interactive-messages:* nodemon src/app.js",
		"mode-test": "cross-env MODE=test TEST_USER=teste2e:teste2e PORT=8787 DEBUG=@slack/events-api:*,@slack/interactive-messages:* nodemon src/app.js",
		"test": "npm run test-api && npm run test-unit",
		"test-api": "mocha --exit --timeout 10000 tests/api/*.test.js",
		"test-unit": "mocha --exit --timeout 10000 tests/services/*.test.js",
		"lint-js": "eslint .",
		"lint-js-fix": "eslint . --fix",
		"lint-md": "markdownlint README.md",
		"lint-md-fix": "markdownlint README.md --fix",
		"lint": "npm run lint-js && npm run lint-md",
		"lint-fix": "npm run lint-js-fix && npm run lint-md-fix"
	}
}
